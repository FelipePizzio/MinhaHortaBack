// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  plantations   String[] @default([])

  @@map("users")
}

model Plantation {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  plantId String
  userId  String

  @@map("plantations")
}

model Plant {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  @@map("plants")
}
